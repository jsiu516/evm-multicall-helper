{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2021",
    "lib": ["dom", "es2021"],
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@helper/*": ["./src/helpers/*"],
      "@util/*": ["./src/utils/*"],
      "@types": ["./src/types/interface"],
      "@logic": ["./src/logic"],
      "@abi": ["./src/abi"]
    }
  },
  "include": ["module.d.ts", "src/**/*", "test/**/*", "env"],
  "exclude": ["node_modules"]
}
